# Environment Variables Template for Render Deployment

# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1

# Database (Render will provide this automatically if you add PostgreSQL)
DATABASE_URL=postgres://user:password@host:5432/database

# CORS Settings (add all your Vercel domains - production and preview URLs)
CORS_ALLOWED_ORIGINS=https://ananthomss.vercel.app,https://ananthomss-git-main-atharv-choudharys-projects.vercel.app,https://ananthomss-atharv-choudharys-projects.vercel.app,http://localhost:3000
CSRF_TRUSTED_ORIGINS=https://ananthomss.vercel.app,https://ananthomss-git-main-atharv-choudharys-projects.vercel.app,https://ananthomss-atharv-choudharys-projects.vercel.app,http://localhost:3000

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
